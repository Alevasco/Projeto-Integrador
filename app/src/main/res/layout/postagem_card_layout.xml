<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/feedNome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:textSize="20sp"
            tools:text="Nome" />

        <ImageButton
            android:id="@+id/buttonEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_weight="1"
            android:contentDescription="@string/editPostagemButton"
            android:minHeight="48dp"
            app:srcCompat="@drawable/ic_baseline_edit_24" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <ImageView
            android:id="@+id/feedPerfil"
            android:layout_width="111dp"
            android:layout_height="94dp"
            android:contentDescription="TODO"
            app:srcCompat="@drawable/_27366" />

        <TextView
            android:id="@+id/textTema"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            tools:text="Tema" />

        <TextView
            android:id="@+id/feedTitulo"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="12dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="34sp"
            tools:text="Título" />

        <TextView
            android:id="@+id/feedDescricao"
            android:layout_width="374dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textAlignment="textStart"
            android:textColor="#000000"
            android:textSize="16sp"
            tools:text=" Descrição" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="378dp"
            android:layout_height="256dp"
            app:srcCompat="@android:drawable/ic_menu_report_image"
            tools:srcCompat="@android:drawable/ic_menu_report_image" />

        <Button
            android:id="@+id/buttonDeletar"
            android:layout_width="136dp"
            android:layout_height="54dp"
            android:text="Deletar Postagem" />

    </LinearLayout>

</androidx.cardview.widget.CardView>